# 基本配置
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y  # 针对 64 位 x86 平台（若需 32 位可改为 CONFIG_TARGET_x86_generic=y）
CONFIG_TARGET_x86_64_DEVICE_generic=y  # 通用 x86 设备

# 基础系统组件
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_cgi-io=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_kmod-ipt-nat6=y
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_procd-seccomp=y
CONFIG_PACKAGE_procd-ujail=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_uclient-fetch=y

# 网络组件（OpenClash 依赖）
CONFIG_PACKAGE_dnsmasq-full=y  # 完整 DNS 功能（OpenClash 需要）
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_kmod-ipt-extra=y
CONFIG_PACKAGE_kmod-ipt-ipset=y
CONFIG_PACKAGE_kmod-tun=y  # TUN 设备支持（Clash 核心依赖）
CONFIG_PACKAGE_ipset=y  # IP 集合工具
CONFIG_PACKAGE_libustream-wolfssl=y  # HTTPS 客户端支持

# OpenClash 及依赖
CONFIG_PACKAGE_luci-app-openclash=y  # OpenClash LuCI 界面
CONFIG_PACKAGE_openclash=y  # OpenClash 主程序
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_curl=y  # 用于下载资源
CONFIG_PACKAGE_libpthread=y
CONFIG_PACKAGE_libstdcpp=y  # C++ 库（部分 Clash 核心依赖）
CONFIG_PACKAGE_gnupg=y  # 验证签名（可选）

# 存储支持（根据需求选择）
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-nls-cp437=y
CONFIG_PACKAGE_kmod-nls-iso8859-1=y

# 其他工具（可选）
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_wget=y
